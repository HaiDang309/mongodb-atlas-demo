<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="d-flex justify-content-between align-items-center">
        <button type="button" class="btn btn-secondary">
            <a class="nav-link btn btn-link" href="/">Back</a>
        </button>

        <h3 class="text-center">
            <%= title %>
        </h3>
        <div></div>
    </div>

    <div class="d-flex justify-content-center">
        <form action="/update/<%= student.student_id %> " method="POST" class="w-50">
            <div class="row">
                <!-- id -->
                <div class="mb-2 mt-2 col">
                    <label for="id" class="form-label">ID:</label>
                    <input type="text" class="form-control" id="id" placeholder="Enter ID" name="student_id"
                        value="<%= student.student_id %>">
                </div>

                <!-- Full name -->
                <div class="mb-2 mt-2 col">
                    <label for="fullName" class="form-label">Full name:</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Enter your full name..."
                        name="full_name" value="<%= student.full_name %>">
                </div>


            </div>


            <div class="row">
                <!-- Email -->
                <div class="mb-2 mt-2 col">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email"
                        value="<%= student.email %>">
                </div>

                <!-- Address -->
                <div class="mb-2 mt-2 col">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" class="form-control" id="address" placeholder="Enter address" name="address"
                        value="<%= student.address %>">
                </div>
            </div>


            <!-- Sex -->
            <div class="d-flex justify-content-center gap-2">
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="male" name="sex" value="male" <%=student.sex===true
                        ? "checked" : "" %>>
                    <label class="form-check-label" for="male">Male</label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="female" name="sex" value="female"
                        <%=student.sex===false ? "checked" : "" %>>
                    <label class="form-check-label" for="female">Female</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>



</body>

</html>